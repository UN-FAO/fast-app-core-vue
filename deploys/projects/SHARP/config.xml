<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="35" id="org.fao.sharp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SHARP+</name>
    <description>
  Self-evaluation and Holistic Assessment of climate resilence of Farmers and Pastoralists
    </description>
    <author email="ignacio.cabrera@fao.org" href="http://www.fao.org">
        FAO-UN  - CIO - IT DESIGN AND TECHNOLOGY
    </author>
    <icon src="www/statics/sharpIcon.png" />
    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="www/statics/2000px-FAO_logo_reverse.png" density="land-hdpi"/>
    <splash src="www/statics/2000px-FAO_logo_reverse.png" density="land-ldpi"/>
    <splash src="www/statics/2000px-FAO_logo_reverse.png" density="land-mdpi"/>
    <splash src="www/statics/2000px-FAO_logo_reverse.png" density="land-xhdpi"/>

    <splash src="www/statics/2000px-FAO_logo_reverse.png" density="port-hdpi"/>
    <splash src="www/statics/2000px-FAO_logo_reverse.png" density="port-ldpi"/>
    <splash src="www/statics/2000px-FAO_logo_reverse.png" density="port-mdpi"/>
    <splash src="www/statics/2000px-FAO_logo_reverse.png" density="port-xhdpi"/>
</platform>
 <preference name="splashscreen" value="splash" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
